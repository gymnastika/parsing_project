/* Enhanced form validation styles - only show after interaction */
.form-group input.was-validated:invalid {
    border-color: var(--error);
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.1);
}

.form-group input.was-validated:valid {
    border-color: var(--success);
    box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
}

/* New Input Group Style - адаптированный под фиолетовую тему */
.inputGroup {
  font-family: 'Segoe UI', sans-serif;
  margin: 0 0 1.5rem 0;
  max-width: 100%;
  position: relative;
}

.inputGroup input {
  font-size: 0.95rem;
  padding: 0.8em;
  outline: none;
  border: 2px solid rgba(255, 255, 255, 0.3);
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  width: 100%;
  color: white;
  backdrop-filter: blur(10px);
  transition: all 0.3s ease;
}

.inputGroup label {
  font-size: 0.9rem;
  position: absolute;
  left: 0;
  padding: 0.8em;
  margin-left: 0.5em;
  pointer-events: none;
  transition: all 0.3s ease;
  color: rgba(255, 255, 255, 0.7);
  font-weight: 500;
}

.inputGroup :is(input:focus, input:valid)~label {
  transform: translateY(-50%) scale(.85);
  margin: 0em;
  margin-left: 1.3em;
  padding: 0.3em 0.6em;
  background: linear-gradient(135deg, var(--primary-purple) 0%, var(--primary-purple-light) 100%);
  border-radius: 8px;
  color: white;
  font-weight: 500;
  box-shadow: 0 2px 8px rgba(124, 58, 237, 0.3);
}

.inputGroup :is(input:focus, input:valid) {
  border-color: var(--primary-purple);
  background-color: rgba(255, 255, 255, 0.15);
  box-shadow: 0 0 0 3px rgba(124, 58, 237, 0.2);
}

.inputGroup input::placeholder {
  color: transparent;
}

/* Old Slide Up Input Animation */
.form-group {
    position: relative;
    margin-bottom: 1.5rem;
}

.form-group .elegant-slide {
    display: inline-block;
    width: 100%;
    padding: 10px 0 10px 15px !important;
    font-family: "Open Sans", -apple-system, BlinkMacSystemFont, sans-serif;
    font-weight: 400;
    color: var(--text-dark);
    background: var(--bg-white) !important;
    border: 0 !important;
    border-radius: 3px !important;
    outline: 0;
    text-indent: 80px !important;
    transition: all .3s ease-in-out !important;
    font-size: 1rem;
    box-shadow: none !important;
}

.form-group .elegant-slide::placeholder {
    color: var(--bg-white) !important;
    text-indent: 0;
    font-weight: 300;
}

.form-group .elegant-slide + label {
    display: inline-block;
    position: absolute;
    transform: translateX(0);
    top: 0;
    left: 0;
    padding: 10px 15px;
    color: var(--bg-white);
    font-weight: 500;
    text-shadow: 0 1px 0 rgba(124, 58, 237, 0.4);
    background: var(--primary-purple);
    transition: all .3s ease-in-out;
    border-top-left-radius: 3px;
    border-bottom-left-radius: 3px;
    overflow: hidden;
    margin-bottom: 0 !important;
}

.form-group .elegant-slide + label::before,
.form-group .elegant-slide + label::after {
    content: "";
    position: absolute;
    right: 0;
    left: 0;
    z-index: -1;
    transition: all .3s ease-in-out;
}

.form-group .elegant-slide + label::before {
    top: 6px;
    left: 5px;
    right: 5px;
    bottom: 6px;
    background: var(--primary-purple-dark);
}

.form-group .elegant-slide + label::after {
    top: 0;
    bottom: 0;
    background: var(--primary-purple);
}

.form-group .elegant-slide:focus,
.form-group .elegant-slide:active {
    color: var(--text-dark) !important;
    text-indent: 0 !important;
    background: var(--bg-white) !important;
    box-shadow: none !important;
    transform: none !important;
}

.form-group .elegant-slide:focus::placeholder,
.form-group .elegant-slide:active::placeholder {
    color: var(--text-light) !important;
}

.form-group .elegant-slide:focus + label,
.form-group .elegant-slide:active + label {
    transform: translateY(-100%) scale(0.75);
}

.form-group .elegant-slide:focus + label::before,
.form-group .elegant-slide:active + label::before {
    border-radius: 5px;
}

.form-group .elegant-slide:focus + label::after,
.form-group .elegant-slide:active + label::after {
    transform: translateY(100%);
}

/* Glitch Input for Secret Code */
.glitch-input-wrapper {
  --bg-color: #0d0d0d;
  --primary-color: #00f2ea;
  --secondary-color: #a855f7;
  --text-color: #e5e5e5;
  --font-family: "Fira Code", Consolas, "Courier New", Courier, monospace;
  --glitch-anim-duration: 0.4s;

  display: block;
  font-family: var(--font-family);
  font-size: 16px;
  padding: 0 !important;
  margin: 0 0 1.5rem 0 !important;
}

/* --- Container  --- */
.input-container {
  position: relative;
  width: 100%;
  max-width: 400px;
  padding: 0;
}

/* --- Input --- */
.holo-input {
  width: 100%;
  height: 3rem;
  background: rgba(255, 255, 255, 0.1) !important;
  border: none !important;
  border-bottom: 2px solid rgba(124, 58, 237, 0.3) !important;
  outline: none;
  padding: 0 1rem;
  color: white !important;
  font-family: inherit;
  font-size: 1.2rem;
  font-weight: 600;
  caret-color: var(--primary-purple);
  z-index: 10;
  transition: background 0.3s ease, border-color 0.3s ease !important;
  box-shadow: none !important;
  text-align: center;
  letter-spacing: 0.1em;
}

.holo-input::placeholder {
  color: rgba(255, 255, 255, 0.6) !important;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.holo-input:focus::placeholder {
  opacity: 0;
}

/* --- Floating Label --- */
.input-label {
  position: absolute;
  top: 1rem;
  left: 1rem;
  color: rgba(255, 255, 255, 0.8);
  opacity: 0.8;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  pointer-events: none;
  transition: all 0.3s ease;
  z-index: 11;
  font-weight: 500;
}
.holo-input:focus + .input-label,
.holo-input:not(:placeholder-shown) + .input-label {
  top: -1.5rem;
  left: 0;
  font-size: 0.8rem;
  opacity: 1;
  color: var(--primary-purple);
}

.holo-input:focus + .input-label::before,
.holo-input:focus + .input-label::after {
  display: none;
}

/* --- Decorative Layers --- */
.input-border,
.input-scanline,
.input-glow,
.input-corners {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 3rem;
  pointer-events: none;
}
.input-border {
  border: 1px solid rgba(0, 242, 234, 0.2);
  opacity: 0.5;
  transition: all 0.3s ease;
}
.corner {
  position: absolute;
  width: 1rem;
  height: 1rem;
  border: 2px solid #00f2ea;
  transition: all 0.3s ease;
  opacity: 0.5;
}
.corner-tl {
  top: -0.3rem;
  left: -0.3rem;
  border-right: none;
  border-bottom: none;
}
.corner-tr {
  top: -0.3rem;
  right: -0.3rem;
  border-left: none;
  border-bottom: none;
}
.corner-bl {
  bottom: -0.3rem;
  left: -0.3rem;
  border-right: none;
  border-top: none;
}
.corner-br {
  bottom: -0.3rem;
  right: -0.3rem;
  border-left: none;
  border-top: none;
}

.input-glow {
  background: radial-gradient(
    ellipse at center,
    rgba(0, 242, 234, 0.2) 0%,
    transparent 70%
  );
  opacity: 0;
  transition: opacity 0.4s ease;
}

.input-scanline {
  height: 100%;
  background: linear-gradient(
    to bottom,
    transparent 0%,
    rgba(0, 242, 234, 0.1) 48%,
    rgba(0, 242, 234, 0.3) 50%,
    rgba(0, 242, 234, 0.1) 52%,
    transparent 100%
  );
  opacity: 0;
}

/* --- Data Visualization --- */
.input-data-stream {
  position: absolute;
  bottom: 2px;
  left: 0;
  width: 100%;
  height: 0.3rem;
  display: flex;
  opacity: 0;
  transition: opacity 0.3s ease 0.1s;
}
.stream-bar {
  flex-grow: 1;
  background-color: var(--primary-color);
  transition:
    transform 0.2s,
    opacity 0.2s;
  transform: scaleY(0);
  transform-origin: bottom;
}

.holo-input:focus {
  border-color: rgba(124, 58, 237, 0.5) !important;
  background: rgba(255, 255, 255, 0.15) !important;
}
.holo-input:focus ~ .input-border {
  opacity: 1;
  border-color: rgba(0, 242, 234, 0.5);
}
.holo-input:focus ~ .input-corners .corner {
  width: 1.25rem;
  height: 1.25rem;
  border-width: 3px;
  opacity: 1;
}
.holo-input:focus ~ .input-glow {
  opacity: 0;
}
.holo-input:focus ~ .input-scanline {
  opacity: 0;
}
.holo-input:focus ~ .input-data-stream {
  opacity: 0;
}

/* --- Keyframes --- */
@keyframes glitch-label {
  0% {
    transform: translate(0);
    clip-path: inset(0 0 0 0);
  }
  20% {
    transform: translate(-0.2rem, 0.1rem);
    clip-path: inset(50% 0 20% 0);
  }
  40% {
    transform: translate(0.1rem, -0.1rem);
    clip-path: inset(20% 0 60% 0);
  }
  60% {
    transform: translate(-0.15rem, 0.1rem);
    clip-path: inset(80% 0 5% 0);
  }
  80% {
    transform: translate(0.15rem, -0.15rem);
    clip-path: inset(30% 0 45% 0);
  }
  100% {
    transform: translate(0);
    clip-path: inset(0 0 0 0);
  }
}

@keyframes scan-vertical {
  0% {
    opacity: 0;
    transform: translateY(-100%);
  }
  25% {
    opacity: 0.5;
  }
  75% {
    opacity: 0.5;
  }
  100% {
    opacity: 0;
    transform: translateY(100%);
  }
}

@keyframes data-pulse {
  0%,
  100% {
    transform: scaleY(0.2);
    opacity: 0.3;
  }
  50% {
    transform: scaleY(1);
    opacity: 0.8;
  }
}

/* Success count styling */
.success-count {
    color: var(--success);
    font-weight: bold;
    font-size: 1.1em;
}

/* ===== STYLISH PROGRESS BAR STYLES ===== */

/* Pipeline Progress Variables */
:root {
    --progress-purple: #7C3AED;
    --progress-purple-light: #8B5CF6;
    --progress-purple-dark: #6B46C1;
    --progress-orange: #FE9000;
    --progress-orange-light: #FFB732;
    --progress-yellow: #FFDD4A;
    --progress-blue-light: #5ADBFF;
    --progress-blue: #3C6997;
    --progress-bounce: cubic-bezier(0, 0, 0, 1.97);
    --progress-smooth: cubic-bezier(0, 0.72, 0.58, 1);
}

/* Main Progress Bar Container */
.stylish-progress-bar {
    display: none;
    margin: 2rem 0;
    opacity: 0;
    transition: opacity 0.5s ease;
}

.stylish-progress-bar.active {
    display: block;
    opacity: 1;
}

/* Progress Bar */
.progress-bar {
    display: flex;
    flex-direction: row-reverse;
    margin: 0 auto;
    width: 100%;
    max-width: 500px;
    justify-content: space-between;
    align-items: center;
}

/* Hidden Radio Inputs */
.progress-bar-input {
    opacity: 0;
    pointer-events: none;
    position: absolute;
    top: -9999px;
    left: -9999px;
}

/* Progress Stage View */
.progress-bar-view {
    display: flex;
    flex: 1;
    position: relative;
    justify-content: center;
    align-items: center;
}

/* Connection Lines */
.progress-bar-view:not(:last-child):before {
    content: '';
    width: calc(100% - 40px);
    height: 4px;
    position: absolute;
    left: calc(50% + 20px);
    top: 50%;
    transform: translateY(-50%);
    background: var(--progress-blue);
    border-radius: 2px;
    z-index: 1;
}

/* Progress Fill Lines */
.progress-bar-view:not(:last-child):after {
    content: '';
    width: calc(100% - 40px);
    height: 2px;
    position: absolute;
    left: calc(50% + 20px);
    top: 50%;
    transform: translateY(-50%) scaleX(0);
    background: linear-gradient(90deg, var(--progress-orange), var(--progress-orange-light));
    transform-origin: left;
    transition: transform 0.3s var(--progress-smooth);
    border-radius: 1px;
    z-index: 2;
}

/* Stage Buttons */
.progress-stage-button {
    display: block;
    width: 40px;
    height: 40px;
    margin: 0;
    border-radius: 50%;
    border: 3px solid var(--progress-blue);
    background: var(--bg-white);
    position: relative;
    cursor: default;
    pointer-events: none;
    box-shadow: 
        inset 2px 2px 4px rgba(0, 0, 0, 0.1),
        0 4px 8px rgba(0, 0, 0, 0.15);
    transition: all 0.3s ease;
    z-index: 3;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
}

/* Stage Button Inner Fill */
.progress-stage-button:before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: radial-gradient(circle at center, var(--progress-yellow), var(--progress-orange));
    transform: scale(0.3);
    opacity: 0;
    transition: 
        transform 0.3s var(--progress-smooth),
        opacity 0.3s var(--progress-smooth);
    z-index: -1;
}

/* Stage Button Tooltip */
.progress-stage-button:after {
    content: '';
    position: absolute;
    border: 8px solid transparent;
    border-top-color: var(--progress-blue-light);
    top: calc(100% + 8px);
    left: 50%;
    transform: translateX(-50%) translateY(-10px);
    opacity: 0;
    transition: 
        transform 0.3s var(--progress-bounce),
        opacity 0.3s var(--progress-bounce);
    pointer-events: none;
}

/* Active Stage Styles */
.progress-bar-view.active .progress-stage-button {
    border-color: var(--progress-purple);
    background: var(--bg-white);
    box-shadow: 
        inset 2px 2px 4px rgba(0, 0, 0, 0.1),
        0 4px 16px rgba(124, 58, 237, 0.3);
    transform: scale(1.1);
}

.progress-bar-view.active .progress-stage-button:before {
    transform: scale(1);
    opacity: 1;
}

.progress-bar-view.active .progress-stage-button:after {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
    animation: bouncing 0.6s cubic-bezier(0, 0, 0.74, 1.04) infinite;
}

/* Completed Stage Styles */
.progress-bar-view.completed .progress-stage-button {
    border-color: var(--success);
    background: var(--success);
    color: white;
}

.progress-bar-view.completed .progress-stage-button:before {
    background: var(--success);
    transform: scale(1);
    opacity: 0.3;
}

/* Completed Connection Lines */
.progress-bar-view.completed:after {
    transform: translateY(-50%) scaleX(1);
}

/* Progress Stage Icons */
.progress-stage-icon {
    font-size: 1rem;
    z-index: 10;
    position: relative;
}

/* Progress Text */
.progress-text {
    text-align: center;
    margin-top: 2rem;
    font-family: 'Ubuntu Mono', 'Courier New', monospace;
    letter-spacing: 1px;
    color: var(--text-gray);
    font-size: 0.95rem;
    min-height: 2rem;
    transition: opacity 0.3s ease;
}

.progress-text.active {
    color: var(--progress-purple);
    font-weight: 600;
    animation: textFade 1s ease infinite;
}

/* Animations */
@keyframes bouncing {
    0%, 100% {
        transform: translateX(-50%) translateY(0);
    }
    50% {
        transform: translateX(-50%) translateY(-5px);
    }
}

@keyframes textFade {
    0%, 100% {
        opacity: 1;
    }
    50% {
        opacity: 0.7;
    }
}

/* Responsive adjustments for stylish progress bar */
@media (max-width: 768px) {
    .progress-bar {
        max-width: 350px;
    }
    
    .progress-stage-button {
        width: 35px;
        height: 35px;
        font-size: 0.9rem;
    }
    
    .progress-bar-view:not(:last-child):before,
    .progress-bar-view:not(:last-child):after {
        width: calc(100% - 35px);
        left: calc(50% + 17.5px);
    }
    
    .progress-text {
        font-size: 0.85rem;
    }
}

