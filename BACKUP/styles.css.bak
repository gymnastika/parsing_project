    margin-top: 0.5rem;
    padding: 0.5rem;
    background: var(--bg-lavender);
    border-radius: 6px;
}

/* Registration Error Messages */
#registerError {
    color: var(--error);
    font-size: 0.875rem;
    margin-top: 1rem;
    text-align: center;
    display: none;
    padding: 0.75rem;
    background: rgba(239, 68, 68, 0.1);
    border-radius: 8px;
    border: 1px solid rgba(239, 68, 68, 0.2);
}

#registerError.show {
    display: block;
