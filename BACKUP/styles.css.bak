        gap: 0.75rem;
    }
    
    .auth-toggle {
        margin-bottom: 1.5rem;
    }
    
    .register-form {
        gap: 1rem;
    }
    
    .auth-toggle button {
        padding: 0.625rem 0.75rem;
        font-size: 0.85rem;
    }
